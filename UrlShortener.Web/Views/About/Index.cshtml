@model UrlShortener.Web.ViewModels.AboutViewModel
@{
    ViewData["Title"] = "About";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    @if (Model.IsAdmin)
    {
        <div class="card card-body bg-light mb-4 shadow-sm">
            <h4>Edit Content (Admin Only)</h4>
            <form asp-action="Index" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="IsAdmin" />

                <div class="mb-3">
                    <textarea asp-for="Content" class="form-control" rows="10" aria-label="About page content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
        <hr />
        <h4>Preview:</h4>
    }

    <div class="content-display mt-3">
        @Html.Raw(Model.Content.Replace("\n", "<br />"))
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}